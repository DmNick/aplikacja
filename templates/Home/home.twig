{% extends "base.html.twig" %}
{% block customcss %}
<link rel="stylesheet" href="css/home.css">
{% endblock %}
{% block breadcrumb %}
<li class="breadcrumb-item active" aria-current="page">
    Strona główna
</li>
{% endblock %}
{% block main %}
<main class="col-12 col-sm-12 col-md-8 col-lg-6 col-xl-6 px-2 m-auto">



{% if app.user.idMagazynu is empty %}

<div class="container">
    <div class="col-12 float-left">Wybierz <a href="magazyn">magazyn</a></div>
</div>
{% else %}
<div class="row row-cols-1 row-cols-md-2 mb-3 text-center">
    <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
            <div class="card-header py-3">
                <h4 class="my-0 fw-normal">Przyjęcia</h4>
            </div>
            <div class="card-body">
                <button type="button" onclick="window.location.href='/przyjecia'" class="w-100 btn btn-lg btn-outline-success">Przejedź</button>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card mb-4 rounded-3 shadow-sm">
            <div class="card-header py-3">
                <h4 class="my-0 fw-normal">Wydania</h4>
            </div>
            <div class="card-body">
                <button type="button" onclick="window.location.href='/wydania'" class="w-100 btn btn-lg btn-outline-primary">Przejedź</button>
            </div>
        </div>
    </div>
</div>
{% endif %}
</main>
{% endblock %}