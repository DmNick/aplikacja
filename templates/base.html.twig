<!DOCTYPE html>
<html lang="pl-PL">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Witam!{% endblock %}</title>
    {% block icon %}<link rel="icon" href="logo.svg">{% endblock %}
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock stylesheets %}
    {% block customcss %}
    {% endblock customcss %}

</head>
{% block body %}
<body class="d-flex flex-column h-100">
    {% block header %}
    <header>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark" aria-label="navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Projekt</a>
            <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarLogo" aria-controls="navbarLogo" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="navbarLogo">
                <ul class="navbar-nav me-auto mb-2 mb-md-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    {% if app.user.idMagazynu.nazwa is defined %}
                    <li class="nav-item">
                        <a class="nav-link" href="#">Asortyment</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link" {% if is_granted('ROLE_ADMIN') %}href="/magazyn"{% endif %}>{% block aktywny %}Magazyn: {{app.user.idMagazynu.nazwa}}{% endblock %}</a>
                    </li>
                    {% endif %}
                </ul>
                <ul class="navbar-nav">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown"
                            aria-expanded="false">Witaj {{ app.user.email }}!
                            <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32"
                                class="rounded-circle"></a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="#">Wprowadenie towaru</a></li>
                            <li><a class="dropdown-item" href="#">Wydanie towaru</a></li>
                            <li><a class="dropdown-item" href="#">Profil</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="/magazyn">Zmień magazyn</a></li>
                            <li><a class="dropdown-item" href="/magazyn/add">Dodaj magazyn</a></li>
                            <li><a class="dropdown-item" href="/adduser">Dodaj użytkownika</a></li>
                            <li><a class="dropdown-item" href="/artykul/add">Dodaj artykuł</a></li>
                            {% endif %}
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item dropdown-item-danger" href="{{ path('app_logout') }}">Wyloguj</a></li>
                        </ul>
                    </li>
                    {% else %}
                    <li class="nav-item"><a href="{{ path('app_login') }}" class="nav-link link-light px-2">Zaloguj</a>
                    </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    </header>
    {% endblock header %}

    
    {% block main %}
    <main>
    {% block container %}
    {% endblock container %}
    </main>
    {% endblock main %}
    
    
    {% block footer %}
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
          <div class="col-md-4 d-flex align-items-center">
            <a href="/" class="mb-3 me-2 mb-md-0 text-muted text-decoration-none lh-1">
                <img src="/logo.svg" alt="" width="30" height="24">
            </a>
            <span class="mb-3 mb-md-0 text-muted">&clubs; 2023 Dominik Banik</span>
          </div>
      
          <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
            <li class="ms-3"><a class="text-muted" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#twitter"></use></svg></a></li>
            <li class="ms-3"><a class="text-muted" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#instagram"></use></svg></a></li>
            <li class="ms-3"><a class="text-muted" href="#"><svg class="bi" width="24" height="24"><use xlink:href="#facebook"></use></svg></a></li>
          </ul>
        </footer>
      </div>
    {% endblock footer %}
    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock javascripts %}
</body>
{% endblock body %}
</html>